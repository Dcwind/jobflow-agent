# Jobflow API Configuration
# Copy this file to .env and fill in your values

# Google API key for Gemini LLM features (extraction fallback, quality validation)
# Get one at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# API key for protecting the proxy endpoint (optional)
API_KEY=

# Feature flags
USE_PLAYWRIGHT=true
USE_LLM_FALLBACK=true
USE_LLM_VALIDATION=false
CHECK_ROBOTS=true  # Check robots.txt before scraping (enterprise compliance)

# Database URL
# Development (SQLite):
DATABASE_URL=sqlite:///./data/jobs.db
# Production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Rate limiting
RATE_LIMIT_PER_MINUTE=30

# Debug mode
DEBUG=false

# ============================================
# Authentication (Better Auth)
# ============================================

# Secret key for signing sessions (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=

# Application URL (for OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
