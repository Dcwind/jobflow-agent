{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "nixpacks.toml",
    "watchPatterns": ["shared/**", "jobflow_api/**", "railway.json"]
  },
  "deploy": {
    "startCommand": "~/.local/bin/uv run --project jobflow_api uvicorn jobflow_api.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
