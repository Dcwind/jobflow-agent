{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && ~/.local/bin/uv pip install --system ./shared ./jobflow_api",
    "watchPatterns": ["shared/**", "jobflow_api/**", "railway.json"]
  },
  "deploy": {
    "startCommand": "uvicorn jobflow_api.main:app --host 0.0.0.0 --port ${PORT:-8000}",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
